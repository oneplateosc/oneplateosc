<header class="site-header">
  <div class="header-container">
    <div class="site-title">
      <%= link_to 'BASS SCORE', root_path, class: 'title-link' %>
    </div>
    <div class="user-actions">
      <% if user_signed_in? %>
        <span class="user-name"><%= current_user.nickname %></span>
        <%= link_to 'ログアウト', destroy_user_session_path, data: {turbo_method: :delete}, class: 'btn btn-logout' %>
      <% else %>
        <%= link_to '登録', new_user_registration_path, class: 'btn btn-signup' %>
        <%= link_to 'ログイン', new_user_session_path, class: 'btn btn-login' %>
      <% end %>
    </div>
  </div>
</header>